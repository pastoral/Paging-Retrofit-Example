<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>


    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardElevation="4dp"
        android:background="@color/whitemate"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/repo_name_size"
                tools:text="Repository Name"/>

            <TextView
                android:id="@+id/repo_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greyAlpha"
                android:textSize="13sp"
                tools:text="Mr. Owner"/>

            <TextView
                android:id="@+id/repo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:paddingVertical="@dimen/row_item_margin_vertical"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/repo_description_size"
                tools:ignore="UnusedAttribute"
                tools:text="A collection of samples to discuss and showcase different architectural tools and patterns for Android apps."/>

            <TextView
                android:id="@+id/repo_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:paddingVertical="@dimen/row_item_margin_vertical"
                tools:text="Language"
                android:text="@string/language"
                android:textSize="@dimen/repo_description_size"
                android:textColor="@color/titleColor"
                tools:ignore="RtlCompat"/>
<!--            android:text="@string/language"-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</layout>
